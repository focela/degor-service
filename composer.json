{
  "name": "focela/larabase",
  "description": "Build basic functional APIs with PHP, without the tears.",
  "keywords": [
    "api",
    "base",
    "focela",
    "helper",
    "laravel"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Focela Technologies",
      "email": "opensource@focela.com",
      "homepage": "https://opensource.focela.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.8",
    "laravel/framework": "^10.48",
    "laravel/helpers": "^1.7",
    "laravel/legacy-factories": "^1.4",
    "laravel/passport": "^11.10",
    "laravel/scout": "^10.10",
    "laravel/tinker": "^2.9",
    "nwidart/laravel-modules": "^11.1",
    "wikimedia/composer-merge-plugin": "^2.1"
  },
  "require-dev": {
    "darkaonline/l5-swagger": "^8.6",
    "fakerphp/faker": "^1.9.1",
    "focela/php-cs-fixer": "^3.0",
    "nunomaduro/collision": "^7.10"
  },
  "autoload": {
    "psr-4": {
      "Focela\\": "app/",
      "Modules\\": "modules/"
    }
  },
  "scripts": {
    "cs:check": "@php php-cs-fixer check --verbose --diff",
    "cs:fix": "@php php-cs-fixer fix",
    "test": "./vendor/bin/phpunit",
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": [
        "nwidart/laravel-modules"
      ]
    },
    "branch-alias": {
      "dev-master": "10.0.x-dev"
    },
    "merge-plugin": {
      "require": [
        "modules/*/composer.json"
      ],
      "merge-extra": true,
      "merge-extra-deep": true,
      "merge-scripts": true
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "php-http/discovery": true,
      "wikimedia/composer-merge-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
